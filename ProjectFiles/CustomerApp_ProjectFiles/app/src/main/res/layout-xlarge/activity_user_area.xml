<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#fff"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
 tools:context="com.anurag.rebel.customerappstart.UserAreaActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the vehicle for servicing and the  radius to find Shops."
        android:padding="8dp"
        android:id="@+id/topMsg"
        android:layout_marginTop="21dp"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btuton"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Shops"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:id="@+id/btuton"
        android:layout_marginTop="50dp"
        android:onClick="GetShops"
        android:layout_below="@+id/rad1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10km "
        android:layout_marginLeft="200dp"
        android:layout_marginTop="8dp"
        android:id="@+id/rad1"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_below="@+id/topMsg"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chk1"
        android:onClick="CheckBox"
        android:layout_below="@+id/topMsg"
        android:layout_toRightOf="@+id/rad1" />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="20km"
       android:layout_marginTop="8dp"
       android:layout_marginLeft="8dp"
       android:id="@+id/rad2"
       android:typeface="sans"
       android:textStyle="bold"
       android:layout_below="@+id/topMsg"
       android:layout_toRightOf="@+id/chk1"
       />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rad2"
        android:onClick="CheckBox"
        android:layout_below="@+id/topMsg"
        android:id="@+id/chk2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30km"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/rad3"
        android:layout_below="@+id/topMsg"
        android:layout_toRightOf="@+id/chk2"
        android:typeface="sans"
        android:textStyle="bold"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chk3"
        android:onClick="CheckBox"
        android:layout_toRightOf="@+id/rad3"
        android:layout_below="@+id/topMsg"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anywhere"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/rad4"
        android:layout_below="@+id/topMsg"
        android:layout_toRightOf="@+id/chk3"
        android:typeface="sans"
        android:textStyle="bold"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chk4"
        android:onClick="CheckBox"
        android:layout_toRightOf="@+id/rad4"
        android:layout_below="@+id/topMsg"
        android:layout_marginLeft="8dp"/>

</RelativeLayout>
