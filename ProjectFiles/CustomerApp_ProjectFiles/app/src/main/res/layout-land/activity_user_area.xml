<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
 tools:context="com.anurag.rebel.customerappstart.UserAreaActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Vehicle For Servicing and the Radius to find Shops! "
        android:typeface="serif"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorAccent"
        android:padding="8dp"
        android:id="@+id/topMsg"
        android:textSize="20dp"
        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btuton"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Shops"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:id="@+id/btuton"
        android:onClick="GetShops"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10km "
        android:layout_marginTop="8dp"
        android:id="@+id/rad1"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_below="@+id/topMsg"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chk1"
        android:onClick="CheckBox"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/chk2"
        android:layout_toRightOf="@+id/rad1"
        android:layout_toEndOf="@+id/rad1" />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="20km"
       android:id="@+id/rad2"
       android:typeface="sans"
       android:textStyle="bold"
       android:layout_alignTop="@+id/rad1"
       android:layout_toRightOf="@+id/chk1"
       android:layout_toEndOf="@+id/chk1"
       android:layout_marginLeft="37dp"
       android:layout_marginStart="37dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="CheckBox"
        android:id="@+id/chk2"
        android:layout_below="@+id/topMsg"
        android:layout_toRightOf="@+id/rad2"
        android:layout_toEndOf="@+id/rad2"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30km"
        android:id="@+id/rad3"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_alignTop="@+id/rad2"
        android:layout_centerHorizontal="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chk3"
        android:onClick="CheckBox"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:layout_below="@+id/topMsg"
        android:layout_toLeftOf="@+id/rad4"
        android:layout_toStartOf="@+id/rad4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anywhere"
        android:id="@+id/rad4"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_alignTop="@+id/rad3"
        android:layout_toLeftOf="@+id/chk4"
        android:layout_toStartOf="@+id/chk4"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chk4"
        android:onClick="CheckBox"
        android:layout_alignTop="@+id/chk3"
        android:layout_alignRight="@+id/topMsg"
        android:layout_alignEnd="@+id/topMsg" />

</RelativeLayout>
